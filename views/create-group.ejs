<!doctype html>
<html>
<head>
    <title>Create Group</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-users"></span> Create Group</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- Create Group Form -->
    <form action="/group/create-group" method="post">
	<div class="form-group">
            <label>Group Name</label>
            <input type="text" class="form-control" name="groupName" required>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Create</button>
    </form>

    <hr>

    <p>Return to <a href="/">profile</a>.</p>

</div>

</div>
</body>
</html>
