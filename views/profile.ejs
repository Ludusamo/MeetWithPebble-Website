<!doctype html>
<html>
<head>
<title>	Profile: <%= user.local.firstName %>  <%= user.local.lastName %> </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script> 
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>

<!-- Nav Bar --> <nav class="navbar navbar-default"> <div class="container-fluid"> <div class="navbar-header"> <a class="navbar-brand" href="/">Meet With Pebble</a> <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button> </div>	<div class="navbar-collapse collapse" id="navbar-collapse"> <ul class="nav navbar-nav"> <% if (user != null) { %> <li><a href="/profile">Profile</a></li> <% } %> <li><a href="/group/portal">Group Portal</a></li> </ul> <ul class="nav navbar-nav navbar-right"> <% if (user != null) {	%> <li><a href="/logout">Logout</a></li> <% } else { %> <li><a href="/login">Login</a></li> <% } %> </ul> </div> </div> </nav>

<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <!-- SUCCESS MESSAGE -->
    <% if (successMessage.length > 0) { %>
        <div class="alert alert-success"><%= successMessage %></div>
    <% } %>
    <!-- Error MESSAGE -->
    <% if (errorMessage.length > 0) { %>
        <div class="alert alert-danger"><%= errorMessage %></div>
    <% } %>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-user"></span> User</h3>
                    <p>
                        <strong>first-name</strong>: <%= user.local.firstName %><br>
                        <strong>last-name</strong>: <%= user.local.lastName %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
			<strong>timeline-token</strong>: <%= user.local.timelineToken %>
                    </p>
		<a href="/edit-profile" class="btn btn-default btn-sm">Edit Profile</a>
            </div>
        </div>

	<!-- Affiliated Groups  -->
	<div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-users"></span> Groups</h3>
                    <p>
		    	<table class="table table-hover">
				<tr> 
					<strong> 
						<a href="/group/create-group"> 
							Create new group...
						</a>
					</strong> 
				</tr>
				<% if (groups.length > 0) { %>
					<% for (var i = 0; i < groups.length; i++) { %>					
						<tr>
							<td>
								<a href="/group/<%= groups[i] %>">
									<%= groups[i] %>
								</a>
							</td>
						</tr>
					<% } %>
				<% } else { %>
					<tr>
						<td>No affiliated groups.</td>
					</tr>
				<% } %>
		    	</table>
                    </p>
            </div>
        </div>

	<!-- Group Invites  -->
	<div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-users"></span> Invites</h3>
                    <p>
			<% if (invites.length > 0) { %>
				<% for (var i = 0; i < invites.length; i++) { %>
					<div class="row">
						<div class="col-sm-10"><%= invites[i] %></div>
						<div class="col-sm-1"> 
							<a href="/group/<%= invites[i] %>/accept" class="btn btn-success btn-sm">
								Accept
							</a>
						</div>
						<div class="col-sm-1"> 
							<a href="/group/<%= invites[i] %>/reject" class="btn btn-danger btn-sm">
								Reject
							</a>
						</div>
					</div>
				<% } %>
			<% } else { %>
				No current invites.
			<% } %>
                    </p>
            </div>
        </div>

	<!-- Event Invites  -->
	<div class="col-sm-12">
            <div class="well">
                <h3><span class="fa fa-calendar"></span> Event Invites</h3>
                    <p>
			<% if (eventInvites.length > 0) { %>
				<% for (var i = 0; i < eventInvites.length; i++) { %>
					<div class="row">
						<div class="col-sm-10"><%= eventInvites[i].groupName %>: <%= eventInvites[i].eventName %></div>
						<div class="col-sm-1"> 
							<a href="/group/<%= eventInvites[i].groupName %>/<%= eventInvites[i].eventName %>/accept/<%= user.local.email %>" class="btn btn-success btn-sm">
								Accept
							</a>
						</div>
						<div class="col-sm-1"> 
							<a href="/group/<%= eventInvites[i].groupName %>/<%= eventInvites[i].eventName %>/reject/<%= user.local.email %>" class="btn btn-danger btn-sm">
								Reject
							</a>
						</div>
					</div>
				<% } %>
			<% } else { %>
				No current invites.
			<% } %>
                    </p>
            </div>
        </div>

    </div>
</div>
</body>
<nav id="footer" style="background-color: #f5f5f5"> <div class="container"> <div class="navbar-header" style="margin: 20px"> <a href="http://www.ludusamo.com">Ludusamo</a> </div> <div class="navbar-nav" style="margin: 20px"> Website created by Brendan Horng </div> <div class="navbar-nav" style="margin: 10px"> <a href="https://github.com/Ludusamo/MeetWithPebble-Website" class="btn btn-default"><span class="fa fa-github"></span></a>	</div> <div class="navbar-nav" style="margin: 20px"> Contact Us! Email: contact@ludusamo.com </div> </div> </nav>
</html>
