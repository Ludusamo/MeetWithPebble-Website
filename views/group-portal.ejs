<!doctype html>
<html>
<head>
    <title>Group Portal</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script> 
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>

<!-- Nav Bar -->
<nav class="navbar navbar-default"><div class="container-fluid"><div class="navbar-header"><a class="navbar-brand" href="/">Meet With Pebble</a></div><div class="collapse navbar-collapse" id="navbar-collapse"><ul class="nav navbar-nav"><% if (user != null) { %> <li><a href="/profile">Profile</a></li> <% } %><li><a href="/group/portal">Group Portal</a></li></ul><ul class="nav navbar-nav navbar-right"><% if (user != null) {	%><li><a href="/logout">Logout</a></li><% } else { %><li><a href="/login">Login</a></li><% } %></ul></div></div></nav>

<body>
<div class="container">
	
	<div class="page-header text-center">

	    <h1><span class="fa fa-users"></span> Group Portal</h1>
	    <h2>Search for groups here.</h2>

	</div>

	<div class="well">
		<form action="/group/portal" class="form-inline" method="post">
			<div class="form-group">
				<input type="text" class="form-control" name="groupName" placeholder="Group Name">
				<button type="submit" class="btn btn-warning">Search</button>
			</div>
		</form>
		</br>
		<table class="table table-hover">
			<% if (groups.length == 0) { %>
				<tr> <td> No groups found. </td> </tr>
			<% } %>
			<% for (var i = 0; i < groups.length; i++) { %>	
				<tr>
					<td>
						<a href="/group/<%= groups[i].groupName %>">
						<strong><%= groups[i].groupName %></strong>
						</a>
					</td>
				</tr>
			<% } %>
		</table>
	</div>

</div>
</body>
</html>
